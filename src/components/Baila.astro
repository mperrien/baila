---
import TheForm from "@/components/TheForm.vue";
import ChartOne from "@/components/ChartOne.vue";
import ChartTwo from "@/components/ChartTwo.vue";
import ChartThree from "@/components/ChartThree.vue";
import SuccessRate from "@/components/SuccessRate.vue";
---

<main class="baila container">
  <TheForm client:load />
  <section class="stats">
    <h2>
      Stats
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-arrow-down"
        ><line x1="12" y1="5" x2="12" y2="19"></line><polyline
          points="19 12 12 19 5 12"></polyline></svg
      >
    </h2>
    <SuccessRate client:load />
    <div class="chartsWrapper">
      <ChartOne client:load />
      <ChartTwo client:load />
      <ChartThree client:load />
    </div>
  </section>
</main>

<style lang="scss">
  .baila {
    // grid-column: 2 / span 12;

    // display: grid;
    // grid-template-columns: subgrid;

    min-height: 100vh;
    // display: flex;
    // justify-content: center;

    .stats {
      // grid-column: 1 / span 12;

      // display: grid;
      // grid-template-columns: subgrid;

      h2 {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-small);
        margin-bottom: 0;

        font-weight: 400;
        // text-align: center;

        svg {
          height: 3.6rem;
          width: auto;
        }
      }

      .chartsWrapper {
        // grid-column: 1 / span 12;

        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: var(--space-medium);

        padding-bottom: var(--space-large);
      }
    }
  }
</style>
